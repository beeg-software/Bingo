@using Bingo.UI.Shared.UIElements.Input
@using Bingo.Common.DomainModel.MasterData
@using Bingo.Common.DomainModel.Setup

<!-- Check if the SectorTime object is null, display a loading message if true -->
@if (sectim == null)
{
    <span>Getting data...</span>
}
else
{
    <!-- Create an EditForm with the SectorTime object as the model and handle submission with the HandleValidSubmit method -->
    <EditForm Model="@sectim" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <MudTextField @bind-Value="sectim.Id" Label="Id" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <MudAutocomplete T="Competitor" Label="Competitor" @bind-Value="LocalCompetitor" SearchFunc="@SearchCompetitor" ToStringFunc="@(e=> e==null?null : $"({e.Number}) {e.Name1}")" />
                </div>
                <div class="col-md-4">
                    <MudTextField @bind-Value="sectim.CompetitorId" Label="CompetitorId" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-2">
                    <MudNumericField @bind-Value="LocalCompetitor.Number" Label="CompetitorNumber" HideSpinButtons="true" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <MudAutocomplete T="Sector" Label="Sector" @bind-Value="LocalSector" SearchFunc="@SearchSector" ToStringFunc="@(e=> e==null?null : $"{e.Name}")" />
                </div>
                <div class="col-md-4">
                    <MudTextField @bind-Value="sectim.SectorId" Label="SectorId" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-2">
                    <MudTextField @bind-Value="LocalSector.Name" Label="SectorName" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <MudTextField @bind-Value="_localEntryTime" Label="EntryTime" DebounceInterval="500" OnDebounceIntervalElapsed="RefreshTimes" TextUpdateSuppression="false" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-6">
                    <MudTextField @bind-Value="_localExitTime" Label="ExitTime" DebounceInterval="500" OnDebounceIntervalElapsed="RefreshTimes" TextUpdateSuppression="false" Variant="Variant.Outlined" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <MudTextField @bind-Value="_stringNetTime" Label="NetTime" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-4">
                    <MudTextField @bind-Value="_stringPenaltyTime" Label="PenaltyTime" DebounceInterval="500" OnDebounceIntervalElapsed="RefreshTimes" TextUpdateSuppression="false" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-4">
                    <MudTextField @bind-Value="_stringTotTime" Label="TotalTime" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <MudTextField @bind-Value="_avgSpeed" Label="AvgSpeed" Adornment="Adornment.End" AdornmentText="km/h" ReadOnly="true" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-4">
                     <MudNumericField @bind-Value="sectim.PenaltyPositions" Label="PenaltyPositions" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-4">
                     <MudTextField @bind-Value="sectim.PenaltyNote" Label="PenaltyNote" Variant="Variant.Outlined" />
                </div>
            </div>
            <!-- Save button -->
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary mt-3">Save</button>
                </div>
            </div>
        </div>
    </EditForm>
}