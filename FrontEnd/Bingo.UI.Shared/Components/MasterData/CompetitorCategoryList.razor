@if (_isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" @bind="_selectAll" @onclick="ToggleSelectAll" />
                    </th>
                    <th>Prog.</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @{
                    _progCount = 1;
                }
                @foreach (var category in _competitorCategoryListUI.OrderBy(us => us.Id))
                {
                    <tr>
                        <td>
                            <input type="checkbox" @bind="category.Selected" />
                        </td>
                        <td>
                            @_progCount
                        </td>
                        <td>

                            <a href="/Masterdata/CompetitorCategoryDetails/@category.IdString">@category.Name</a>
                        </td>
                    </tr>
                    _progCount = _progCount + 1;
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-success" @onclick="() => NavigateToNewCompetitorCategory()">New Category</button>
        <button type="button" class="btn btn-danger" @onclick="() => ConfirmDeleteCompetitorCategories()">Delete Categories</button>
        <button type="button" class="btn btn-info" @onclick="() => ExportToCSV()">Export to CSV</button>
    </form>
}